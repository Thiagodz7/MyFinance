@using MyFinance.Web.DTOs
@inject HttpClient Http
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="Nome" Label="Nome" />

        <MudSelect T="int" Label="Tipo" @bind-Value="TipoSelecionado" AnchorOrigin="Origin.BottomCenter">
            <MudSelectItem Value="0">Receita</MudSelectItem>
            <MudSelectItem Value="1">Despesa</MudSelectItem>
        </MudSelect>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Disabled="_processando">Cancelar</MudButton>

        <MudButton Color="Color.Primary"
                   Variant="Variant.Filled"
                   OnClick="Submit"
                   Disabled="_processando">
            @if (_processando)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                <MudText Class="ms-2">Salvando...</MudText>
            }
            else
            {
                <MudText>Salvar</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public CategoriaDto? Model { get; set; }
    public int TipoSelecionado { get; set; } = 1;
    public string Nome { get; set; } = string.Empty;
    public string Tipo { get; set; } = string.Empty;
    private bool _processando = false;

    protected override void OnInitialized()
    {
        if (Model != null)
        {
            // Modo Edição
            Nome = Model.Nome;
            Tipo = Model.Tipo;
            TipoSelecionado = Model.Tipo == "Receita" ? 0 : 1;
        }
    }

    void Cancel() => MudDialog.Cancel();

    async Task Submit()
    {
        _processando = true;
        StateHasChanged();

        try
        {

            string tipoConvertido = TipoSelecionado == 0 ? "Receita" : "Despesa";

            if (Model == null)
            {
                var command = new { Nome, Tipo = TipoSelecionado };

                var response = await Http.PostAsJsonAsync("api/categorias", command);

                if (response.IsSuccessStatusCode)
                {
                    Snackbar.Add("Sucesso!", Severity.Success);
                    MudDialog.Close(DialogResult.Ok(true));
                }
                else
                {
                    Snackbar.Add("Erro ao salvar!", Severity.Error);
                    _processando = false;
                }
            }
            else
            {
                // --- EDIÇÃO (PUT) ---
                var commandEditar = new { Id = Model.Id, Nome, Tipo = TipoSelecionado };
                var response = await Http.PutAsJsonAsync($"api/categorias/{Model.Id}", commandEditar);

                if (response.IsSuccessStatusCode)
                {
                    Snackbar.Add("Categoria atualizada!", Severity.Success);

                    MudDialog.Close(DialogResult.Ok(true));
                }
                else Snackbar.Add("Erro ao atualizar.", Severity.Error);
            }

        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro de conexão: {ex.Message}", Severity.Error);
            _processando = false;
        }
    }
}