@using MyFinance.Web.DTOs
@inject HttpClient Http
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.body1" Class="mb-4">
            Cadastre suas contas para separar suas finanças (ex: NuConta, Carteira, Investimentos).
        </MudText>

        <MudGrid>
            <MudItem xs="12">
                <MudTextField @bind-Value="Model.Nome"
                              Label="Nome da Conta"
                              Placeholder="Ex: NuConta Principal"
                              Variant="Variant.Outlined"
                              Margin="Margin.Dense"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.Label" />
            </MudItem>

            <MudItem xs="12">
                <MudTextField @bind-Value="Model.Banco"
                              Label="Instituição / Banco"
                              Placeholder="Ex: Nubank"
                              Variant="Variant.Outlined"
                              Margin="Margin.Dense"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.AccountBalance" />
            </MudItem>

            <MudItem xs="12">
                <MudNumericField @bind-Value="Model.SaldoInicial"
                                 Label="Saldo Inicial"
                                 Variant="Variant.Outlined"
                                 Margin="Margin.Dense"
                                 Adornment="Adornment.Start"
                                 AdornmentText="R$"
                                 Format="N2"
                                 HelperText="Quanto dinheiro tem lá hoje?" />
            </MudItem>
        </MudGrid>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="_processando">
            @if (_processando)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                <MudText Class="ms-2">Criando...</MudText>
            }
            else
            {
                <MudText>Salvar Conta</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    private CriarContaRequest Model { get; set; } = new();
    private bool _processando = false;

    void Cancel() => MudDialog.Cancel();

    async Task Submit()
    {
        // Validação Simples
        if (string.IsNullOrWhiteSpace(Model.Nome) || string.IsNullOrWhiteSpace(Model.Banco))
        {
            Snackbar.Add("Por favor, preencha o Nome e o Banco.", Severity.Warning);
            return;
        }

        _processando = true;

        try
        {
            // Envia para o endpoint que criamos no passo anterior
            var response = await Http.PostAsJsonAsync("api/contas", Model);

            if (response.IsSuccessStatusCode)
            {
                Snackbar.Add("Conta criada com sucesso!", Severity.Success);
                MudDialog.Close(DialogResult.Ok(true)); // Fecha retornando Sucesso
            }
            else
            {
                Snackbar.Add("Erro ao criar conta.", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro de comunicação: {ex.Message}", Severity.Error);
        }
        finally
        {
            _processando = false;
        }
    }
}